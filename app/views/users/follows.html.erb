<h1><%= @user.nickname %>さんのフォロー一覧</h1>

<% @users.each do |user| %>
  <hr>
  <p><%= link_to user.nickname, user_path(user.id) %></p>
    <% if current_user != user && user.followed_by?(current_user) %>
        <p><%=link_to "フォロー中", user_relationships_path(user.id),class:"f-button", method: :delete %></p>
    <% end %>
<% end %>